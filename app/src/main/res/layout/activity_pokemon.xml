<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--android:background="android:attr/selectableBackground"-->
    <!--android:clickable="true"-->
    <!--android:focusable="true"-->

    <EditText
        android:id="@+id/tV_SearchPoke"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:hint="Enter Pokemon Name..."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tV_SearchPoke"
        android:layout_alignBottom="@+id/tV_SearchPoke"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:text="Search Pokemon"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_SearchPoke"
        android:layout_marginLeft="0dp" />

    <ImageView
        android:id="@+id/imgView_pokemon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/tV_SearchPoke"
        android:layout_alignStart="@+id/tV_SearchPoke"
        android:layout_below="@+id/tV_SearchPoke"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch"
        app:layout_constraintVertical_bias="0.295"
        app:srcCompat="@color/colorPrimaryDark"
        tools:layout_editor_absoluteY="180dp"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/tV_pokeType"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="type"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgView_pokemon"
        app:layout_constraintTop_toTopOf="@+id/imgView_pokemon" />

    <TextView
        android:id="@+id/tV_height"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="height"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgView_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/tV_pokeType" />

    <TextView
        android:id="@+id/tV_mana"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="mana"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgView_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/tV_height" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        app:layout_constraintBottom_toTopOf="@+id/imgView_pokemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="121dp" />

</android.support.constraint.ConstraintLayout>